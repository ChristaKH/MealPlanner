<?xml version="1.0" encoding="utf-8"?>
<!-- This is the layout for the individual images of recipes
    in a specific section that will go inside the recycler view
    of the recipe_section_layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/recipeImageView"
        android:layout_width="@dimen/recipeImageSize"
        android:layout_height="@dimen/recipeImageSize"
        android:foreground="@drawable/rounded_corners"
        android:padding="@dimen/titlePadding"
        app:srcCompat="@color/desire" />
</LinearLayout>